# Example .env for CarParking
# Copy this file to `.env` and fill in real values locally (do NOT commit `.env`).

DEBUG=True

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email / SendGrid
EMAIL_BACKEND=CarParking.email_backends.SendGridBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=your_email@example.com
SENDGRID_API_KEY=your_sendgrid_api_key_here
TEST_EMAIL_RECIPIENT=your_test_recipient@example.com

# M-Pesa
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_shortcode
MPESA_PASSKEY=your_passkey
MPESA_SIMULATE=True
BASE_URL="https://sandbox.safaricom.co.ke"
NGROK_URL="https://your-ngrok-url"
CALLBACK_URL="https://your-ngrok-url/api/v1/mpesa/lnmo/callback/"

